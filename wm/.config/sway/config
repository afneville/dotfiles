include /etc/sway/config.d/*
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK
include colours

set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu wofi --show=drun --lines=5 --prompt=""

set $left-display DP-2
set $right-display HDMI-A-1

exec_always ~/.config/sway/display_config.sh

workspace 1 output $left-display
workspace 2 output $right-display
workspace 3 output $left-display
workspace 4 output $right-display
workspace 5 output $left-display
workspace 6 output $right-display
workspace 7 output $left-display
workspace 8 output $right-display

exec swayidle -w \
         timeout 300 'before-sleep.sh' \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'before-sleep.sh'


input "type:touchpad" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
    pointer_accel 0.3
}

input * {
    xkb_options "caps:ctrl_modifier"
}

input "type:keyboard" {
        repeat_delay 250
        repeat_rate 40
    }

input "type:pointer" {
        scroll_factor 1.5
        pointer_accel -0.5
    }

### Key bindings

bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym --locked XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- -l 1
bindsym --locked XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ -l 1
bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86Messenger exec playerctl play-pause
bindsym --locked XF86AudioNext exec playerctl next
bindsym --locked Cancel exec playerctl next
bindsym --locked XF86AudioPrev exec playerctl previous
bindsym --locked XF86Go exec playerctl previous
bindsym XF86Favorites exec systemctl suspend
bindsym --locked XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym --locked XF86AudioMicMute exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindsym Print exec grimshot copy area

mode "firefox" {
    bindsym d exec firefox -P default ; mode "default"
    bindsym v exec firefox -P vanilla ; mode "default"
    bindsym h exec firefox -P hardened ; mode "default"
    bindsym p exec firefox -p ; mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+f mode "firefox"

mode "notifications" {
    bindsym t exec swaync-client -t ; mode "default"
    bindsym d exec swaync-client -d ; mode "default"
    bindsym h exec swaync-client --hide-latest ; mode "default"
    bindsym c exec swaync-client --close-latest ; mode "default"
    bindsym shift+c exec swaync-client --close-all ; mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+n mode "notifications"

bindsym $mod+Return exec $term
bindsym $mod+c kill
bindsym $mod+p exec $menu
bindsym $mod+shift+Return exec firefox -P default
floating_modifier $mod normal
bindsym $mod+Shift+r reload
bindsym $mod+Shift+q exec sway exit
bindsym $mod+Shift+f focus mode_toggle
bindsym $mod+Control+q exec systemctl suspend

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+1 workspace number 1
